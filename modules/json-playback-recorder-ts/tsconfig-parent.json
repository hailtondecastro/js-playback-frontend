{
  "compilerOptions": {
    "paths": { 
      "*": ["types/*"]
    },
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": false,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es5",
    "resolveJsonModule": true,
    "esModuleInterop": true ,
    "alwaysStrict": false,
    "noImplicitUseStrict": true
  },
  "types": [
    "mocha",
    "jasmine",
    "node"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-dev",
    "dist-test",
    "ts_src",
    "dist/**",
    "dist-dev/**",
    "dist-test/**",
    "test/**/*.*"
  ],
  "angularCompilerOptions": {
    "genDir": "dist",
    "skipTemplateCodegen": true
  }
}
